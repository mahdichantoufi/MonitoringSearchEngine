{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "title": "The Word schema",
  "description": "The words are referenced in dB table and then linked to documents to avoid duplicates.",
  "examples": [
      {
          "id": 1,
          "word": "DÉCRYPTER",
          "created_at": "2020-11-11T13:49:18.690Z",
          "modified_at": "2020-11-11T13:49:18.690Z",
          "deleted_at": null
      }
  ],
  "required": [
      "word"
  ],
  "properties": {
      "id": {
          "$id": "#/properties/id",
          "type": "integer",
          "title": "The id schema",
          "description": "Auto-generated dB id.",
          "default": 0,
          "examples": [
              1
          ]
      },
      "word": {
          "$id": "#/properties/word",
          "type": "string",
          "title": "The word schema",
          "description": "Words must be unique & not Null in dB.",
          "examples": [
              "DÉCRYPTER"
          ]
      },
      "created_at": {
          "$id": "#/properties/created_at",
          "type": "string",
          "title": "The created_at schema"
      },
      "modified_at": {
          "$id": "#/properties/modified_at",
          "type": "string",
          "title": "The modified_at schema"
      }
  },
  "additionalProperties": false
}